<!DOCTYPE html>
<html>

<head>
    <title>AegrescitMedendo</title>
    <link rel="icon" type="image/x-icon" href="/static/logo.png">
    <script src="/static/scripts.js"></script>
    <link rel="stylesheet" href="/common.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
</head>

<body>
    <ul class="menu">
        <li><a href="index">Home</a></li>
        <li><a href="products">Products</a></li>
        <li><a href="profile">Profile</a></li>
        <li><a href="about">About us</a></li>
    </ul>

    <div class="vertically">
        <div class="horizontally">
            <div class="vertically widget centeredY">
                <h1>Product List</h1>
                <div class="centeredX vertically list_limited">
                    {{#products}}
                    <div class="object vertically">
                        <h2>{{title}}</h2>
                        <div class="details">
                            <div class="horizontally">
                                <div class="horizontally">
                                    <h3>Seller:</h3>
                                    <h4>{{seller_name}} {{seller_surname}}</h4>
                                </div>
                                <div class="horizontally">
                                    <h3>Category:</h3>
                                    <h4>{{category}}</h4>
                                </div>
                            </div>

                            <div class="horizontally">
                                <div class="vertically">
                                    <h3>Amount:</h3> {{amount}}
                                </div>
                                <div class="vertically">
                                    <h3>Price:</h3> {{price}}
                                </div>

                            </div>
                        </div>
                        <div class="description centeredX">{{description}}</div>
                        <div class="actions">
                            <button onclick="remove_entry({{id}}, '/api/product')">Delete</button>
                            <button onclick="update_entry({{id}}, '/api/product')">Update</button>
                        </div>
                    </div>
                    {{/products}}
                </div>
            </div>

            <div class="vertically widget centeredY">
                <h1>Product Form</h1>
                <form class="centeredX vertically box" id="product-form">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required>

                    <div class="horizontally">
                        <div class="vertically">
                            <label for="amount">Amount</label>
                            <input type="number" min="1" id="amount" name="amount" required>
                        </div>

                        <div class="vertically">
                            <label for="price">Price</label>
                            <input type="number" min="0" id="price" name="price" required>
                        </div>
                    </div>

                    <label for="category">Category</label>
                    <select id="category" name="category" required>
                        <option value="">--Please choose an option--</option>
                        {{#category}}
                        <option value="{{id}}">{{name}}</option>
                        {{/category}}
                    </select>

                    <label for="description">Description</label>
                    <textarea id="description" name="description" rows="5" required></textarea>
                    <button type="button" onclick="submit_product()">Submit</button>
                </form>
            </div>
        </div>

        <div class="horizontally">
            <div class="vertically widget centeredY">
                <h1>User List</h1>
                <div class="centeredX vertically list_limited">
                    {{#users}}
                    <div class="object">
                        <div class="horizontally">
                            <div class="horizontally">
                                <h3>Name:</h3>
                                <h4>{{name}} </h4>
                            </div>
                            <div class="horizontally">
                                <h3>Surname:</h3>
                                <h4>{{surname}}</h4>
                            </div>
                        </div>
                        <div class="horizontally">
                            <div class="horizontally">
                                <h3>Username:</h3>
                                <h4>{{username}} </h4>
                            </div>
                            <div class="horizontally">
                                <h3>Password:</h3>
                                <h4>{{password}}</h4>
                            </div>

                        </div>
                        <div class="horizontally">
                            <div class="vertically">
                                <h3>Email:</h3> {{email}}
                            </div>
                            <div class="vertically">
                                <h3>Phone:</h3> {{phone}}
                            </div>
                            <div class="vertically">
                                <h3>Balance:</h3> {{balance}}
                            </div>
                        </div>
                        <div class="actions">
                            <button onclick="remove_entry({{id}}, '/api/user')">Delete</button>
                            <button onclick="update_entry({{id}}, '/api/user')">Update</button>
                        </div>
                    </div>
                    {{/users}}
                </div>
            </div>

            <div class="vertically widget centeredY">
                <h1>User Form</h1>
                <form class="centeredX vertically box" id="user-form">
                    <div class="horizontally">
                        <div class="vertically">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="name" required>
                        </div>

                        <div class="vertically">
                            <label for="surname">Surname</label>
                            <input type="text" id="surname" name="surname" required>
                        </div>
                    </div>

                    <div class="horizontally">
                        <div class="vertically">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required>
                        </div>

                        <div class="vertically">
                            <label for="username">Username</label>
                            <input type="text" id="username" name="username" required>
                        </div>

                    </div>

                    <div class="horizontally">
                        <div class="vertically">
                            <label for="balance">Balance</label>
                            <input type="number" min="0" step="0.01" id="balance" name="balance" required>
                        </div>
                        <div class="vertically">
                            <label for="phone">Phone</label>
                            <input type="tel" id="phone" name="phone" required>
                        </div>
                    </div>

                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                    <button type="button" onclick="submit_user()">Submit</button>
                </form>

            </div>
        </div>

        <div class="horizontally">
            <div class="vertically  widget centeredY">
                <h1>Review List</h1>
                <div class="centeredX vertically list_limited" id="review_list">
                    {{#reviews}}
                    <div class="object">
                        <div class="horizontally">
                            <h3>Rating:</h3>{{rating}}
                        </div>
                        <div class="vertically">
                            <h3>Content:</h3> {{content}}
                        </div>
                        <div class="actions">
                            <button onclick="remove_entry({{id}}, '/api/review')">Delete</button>
                            <button onclick="update_entry({{id}}, '/api/review')">Update</button>
                        </div>
                    </div>
                    {{/reviews}}
                </div>
            </div>

            <div class="vertically  widget centeredY">
                <h1>Review Form</h1>
                <form class="centeredX vertically box" id="review-form">
                    <label for="rating">Rating</label>
                    <input type="number" min="1" max="5" id="rating" name="rating" required>

                    <label for="content">Content</label>
                    <textarea id="content" name="content" rows="5" required></textarea>
                    <button type="button" onclick="submit_review()">Submit</button>
                </form>
            </div>
        </div>

        <div class="horizontally">
            <div class="vertically  widget centeredY">
                <h1>Category List</h1>
                <div class="centeredX vertically list_limited" id="category_list">
                    {{#categories}}
                    <div class="object">
                        <div class="horizontally">
                            <div class="title horizontally">
                                <h3>Name:</h3>
                                <h4>{{name}}</h4>
                            </div>
                            <div class="horizontally">
                                <h3>Active:</h3>
                                <h4> {{is_active}}</h4>
                            </div>
                        </div>
                        <div class="actions">
                            <button onclick="remove_entry({{id}}, '/api/category')">Delete</button>
                            <button onclick="update_entry({{id}}, '/api/category')">Update</button>
                        </div>
                    </div>
                    {{/categories}}
                </div>
            </div>

            <div class="vertically  widget centeredY">
                <h1>Category Form</h1>
                <form class="centeredX vertically box" id="category-form">
                    <div class="horizontally">
                        <div class="vertically">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="name" required>
                        </div>

                        <div class="vertically">
                            <label for="is_active">Active</label>
                            <input type="checkbox" id="is_active" name="is_active" value="1" checked>
                        </div>
                    </div>
                    <button type="button" onclick="submit_category()">Submit</button>
                </form>
            </div>
        </div>

    </div>

</body>

</html>