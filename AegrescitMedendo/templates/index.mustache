<!DOCTYPE html>
<html>

<head>
    <title>AegrescitMedendo</title>
    <link rel="icon" type="image/x-icon" href="/static/logo.png">
    <script src="/static/scripts.js"></script>
    <link rel="stylesheet" href="/common.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
</head>

<body>
    <div class="main_sd">
        <div class="vertically stretch">
            <form action="#" method="GET">
                <select name="category">
                    {{#categories}}
                    <option value="{{id}}">{{name}}</option>
                    {{/categories}}
                </select>
                <input type="text" name="search" placeholder="Enter your search query">
                <button type="submit">Search</button>
            </form>
            <div class="vertically  centeredY">
                <div class="product_list_parent">
                    <div class="product_list ">
                        {{#products}}
                        <div class="object vertically" onclick="redirectToProduct('{{id}}')">
                            <h2>{{title}}</h2>
                            <div class="details">
                                <div class="horizontally">
                                    <div class="horizontally">
                                        <h3>Seller:</h3>
                                        <h4>{{seller_name}} {{seller_surname}}</h4>
                                    </div>
                                    <div class="horizontally">
                                        <h3>Category:</h3>
                                        <h4>{{category}}</h4>
                                    </div>
                                </div>

                                <div class="horizontally">
                                    <div class="vertically">
                                        <h3>Amount:</h3> {{amount}}
                                    </div>
                                    <div class="vertically">
                                        <h3>Price:</h3> {{price}}
                                    </div>
                                </div>
                            </div>
                            <div class="description centeredX">{{description}}</div>
                        </div>
                        {{/products}}
                    </div>
                </div>
            </div>
        </div>
        <div class="vertically ">
            <ul class="menu_side">
                <li><a href="index">Home</a></li>
                <li><a href="profile/{{user_id}}">Profile</a></li>
                <li><a href="about">About&nbsp;us</a></li>
            </ul>
            <div class="user-widget">
                <h3>User Information</h3>
                <p>Username: {{username}}</p>
                <p>Balance: {{balance}}$</p>
                <button onclick="goToProfile()">Go to Profile</button>
                <button onclick="logout()">Logout</button>
            </div>
        </div>
    </div>

    <script>
        function goToProfile() {
            window.location.href = "profile/{{user_id}}";
        }

        function logout() {
            deleteCookie('access_token');
            deleteCookie('username');
            localStorage.clear();
            window.location.href = "login";
        }

        function redirectToProduct(id) {
            window.location.href = '/product/' + id;
        }
    </script>
</body>

</html>